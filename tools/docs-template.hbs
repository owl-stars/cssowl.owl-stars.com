%h2#{{mixinName}} {{mixinName}} <small>({{join mixinParams ", "}})</small>

%p
  :markdown
    {{{indent description}}}

= preserve do
  -code("sass") do
    :plain
      /*
       {{#each mixin.parameters}}* @param ${{@key}} {{this}}
       {{/each}}*/
      {{{indent mixin.sass 3}}}

.bs-docs-example

  .content
    {{{indent examples.html 2}}}

  %ul.nav.nav-tabs
    %li.active
      = link_to 'Sass', '#example-{{{basename}}}-sass'
    %li
      = link_to 'Scss', '#example-{{{basename}}}-scss'
    %li
      = link_to 'Less', '#example-{{{basename}}}-less'
    %li
      = link_to 'Stylus', '#example-{{{basename}}}-stylus'
    %li
      = link_to 'Html', '#example-{{{basename}}}-html'

  .tab-content
    #example-{{{basename}}}-sass.tab-pane.active
      = preserve do
        -code("sass") do
          :plain
            {{{indent examples.sass 6}}}
    #example-{{{basename}}}-scss.tab-pane
      = preserve do
        -code("scss") do
          :plain
            {{{indent examples.scss 6}}}
    #example-{{{basename}}}-less.tab-pane
      = preserve do
        -code("less") do
          :plain
            {{{indent examples.less 6}}}
    #example-{{{basename}}}-stylus.tab-pane
      = preserve do
        -code("stylus") do
          :plain
            {{{indent examples.stylus 6}}}
    #example-{{{basename}}}-html.tab-pane
      = preserve do
        -code("html") do
          {{{indent examples.html 5}}}