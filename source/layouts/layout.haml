!!!5
/[if lt IE 7] <html class="no-js lt-ie9 lt-ie8 lt-ie7">
/[if IE 7] <html class="no-js lt-ie9 lt-ie8">
/[if IE 8] <html class="no-js lt-ie9">
%html.no-js
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width", :name => "viewport"}
    %title= page_title
    %meta{:content => page_description, :name => "description"}

    -#Favicon Options:
    -#Update favicon_base.png in /source and middleman-favicon-maker will generate all the versions you need on 'middleman build'
    -#OR, place favicon.ico and apple-touch-icon.png in /source and deactivate :favicon_maker in config.rb

    = stylesheet_link_tag "all", "syntax", "examples"
    = javascript_include_tag  "modernizr"

  %body{:class => page_classes}

    .bs-header
      .container
        %h1 Cssowl
        %p Lorem ipsum

    .container.bs-docs-container
      .row
        .col-md-3
          .bs-sidebar.hidden-print
            %ul.nav.bs-sidenav
              %li
                %a{:href => "#display"} Display
                %ul.nav
                  %li
                    %a{:href => "#cssowl-sprite-display"} display
                  %li
                    %a{:href => "#cssowl-sprite-display-block"} display-block
                  %li
                    %a{:href => "#cssowl-sprite-display-inline"} display-inline
              %li
                %a{:href => "#replace"} Replace
                %ul.nav
                  %li
                    %a{:href => "#cssowl-sprite-replace"} replace
                  %li
                    %a{:href => "#cssowl-sprite-replace-block"} replace-block
                  %li
                    %a{:href => "#cssowl-sprite-replace-inline"} replace-inline
              %li
                %a{:href => "#absolute"} Absolute
                %ul.nav
                  %li
                    %a{:href => "#cssowl-sprite-absolute"} absolute
                  %li
                    %a{:href => "#cssowl-sprite-absolute-inside"} absolute-inside
                  %li
                    %a{:href => "#cssowl-sprite-absolute-outside"} absolute-outside
              %li
                %a{:href => "#float"} Float
                %ul.nav
                  %li
                    %a{:href => "#cssowl-sprite-float-left"} float-left
                  %li
                    %a{:href => "#cssowl-sprite-float-right"} float-right
              %li
                %a{:href => "#before"} Before
                %ul.nav
                  %li
                    %a{:href => "#cssowl-sprite-before"} before
                  %li
                    %a{:href => "#cssowl-sprite-before-inline"} before-inline
                  %li
                    %a{:href => "#cssowl-sprite-before-float"} before-float
                  %li
                    %a{:href => "#cssowl-sprite-before-absolute"} before-absolute
                  %li
                    %a{:href => "#cssowl-sprite-before-absolute-inside"} before-absolute-inside
                  %li
                    %a{:href => "#cssowl-sprite-before-absolute-outside"} before-absolute-outside
              %li
                %a{:href => "#after"} After
                %ul.nav
                  %li
                    %a{:href => "#cssowl-sprite-after"} after
                  %li
                    %a{:href => "#cssowl-sprite-after-inline"} after-inline
                  %li
                    %a{:href => "#cssowl-sprite-after-float"} after-float
                  %li
                    %a{:href => "#cssowl-sprite-after-absolute"} after-absolute
                  %li
                    %a{:href => "#cssowl-sprite-after-absolute-inside"} after-absolute-inside
                  %li
                    %a{:href => "#cssowl-sprite-after-absolute-outside"} after-absolute-outside

        .col-md-9.bs-docs-content
          = yield


    = javascript_include_tag  "main"
