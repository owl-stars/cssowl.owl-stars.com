%h3#cssowl-sprite-before cssowl-sprite-before <small>(x, y, width, height, src)</small>

%p
  :markdown
    Add a sprite element with the `:before` pseudo selector.

= preserve do
  -code("sass") do
    :plain
      /*
       * @param $x x position of the element
       * @param $y y position of the element
       * @param $width element width
       * @param $height element height
       * @param $src background image source
       */
      @mixin cssowl-sprite-before($x, $y, $width, $height, $src)
        &:before
          content: ""
          +cssowl-sprite-display-block($x, $y, $width, $height, $src)

.bs-docs-example

  .content
    .example-before Quia sint quis nam et quia ducimus consequatur cumque.

  %ul.nav.nav-tabs
    %li.active.htmltab
      = link_to 'HTML', '#example-before-html'
    %li
      = link_to 'LESS', '#example-before-less'
    %li
      = link_to 'SASS', '#example-before-sass'
    %li
      = link_to 'SCSS', '#example-before-scss'
    %li
      = link_to 'Stylus', '#example-before-stylus'


  .tab-content
    #example-before-sass.tab-pane
      = preserve do
        -code("sass") do
          :plain
            .example-before
              +cssowl-sprite-before(-110px, -30px, 15px, 15px, url("sprite.png"))
    #example-before-scss.tab-pane
      = preserve do
        -code("scss") do
          :plain
            .example-before {
              @include cssowl-sprite-before(-110px, -30px, 15px, 15px, url("sprite.png"));
            }
    #example-before-less.tab-pane
      = preserve do
        -code("less") do
          :plain
            .example-before {
              .cssowl-sprite-before(-110px, -30px, 15px, 15px, url("sprite.png"));
            }
    #example-before-stylus.tab-pane
      = preserve do
        -code("stylus") do
          :plain
            .example-before
              cssowl-sprite-before(-110px, -30px, 15px, 15px, url("sprite.png"))
    #example-before-html.tab-pane.active
      = preserve do
        -code("html") do
          .example-before Quia sint quis nam et quia ducimus consequatur cumque.
