%h3#cssowl-sprite-absolute-inside cssowl-sprite-absolute-inside

:markdown
  Place a sprite element with `position: absolute;` *inside* the bounding box.

.panel.panel-default
  .panel-heading
    = link_to 'Source', '#source-cssowl-sprite-absolute-inside', data: {toggle: 'collapse'}

  #source-cssowl-sprite-absolute-inside.panel-body.panel-collapse.collapse
    %ul.nav.nav-tabs
      %li.active
        = link_to 'SASS', '#source-cssowl-sprite-absolute-inside-sass'
      %li
        = link_to 'SCSS', '#source-cssowl-sprite-absolute-inside-scss'
      %li
        = link_to 'LESS', '#source-cssowl-sprite-absolute-inside-less'
      %li
        = link_to 'Stylus', '#source-cssowl-sprite-absolute-inside-styl'

    .tab-content
      #source-cssowl-sprite-absolute-inside-sass.tab-pane.active
        = preserve do
          -code("sass") do
            :plain
              =cssowl-sprite-absolute-inside($element, $valign:top, $halign:left, $xOffset:0, $yOffset:0)
                +cssowl-absolute-inside(nth($element, 3), nth($element, 4), $valign, $halign, $xOffset, $yOffset)
                @extend %\#{nth($element, 5)}
      #source-cssowl-sprite-absolute-inside-scss.tab-pane
        = preserve do
          -code("scss") do
            :plain
              @mixin cssowl-sprite-absolute-inside($element, $valign:top, $halign:left, $xOffset:0, $yOffset:0) {
                @include cssowl-absolute-inside(nth($element, 3), nth($element, 4), $valign, $halign, $xOffset, $yOffset);
                @extend %\#{nth($element, 5)};
              }
      #source-cssowl-sprite-absolute-inside-less.tab-pane
        = preserve do
          -code("scss") do
            :plain
              .cssowl-sprite-absolute-inside(@element, @valign:top, @halign:left, @xOffset:0, @yOffset:0) {
                .cssowl-absolute-inside(extract(@element, 3), extract(@element, 4), @valign, @halign, @xOffset, @yOffset);
                .less-sprite-element(extract(@element, 5));
              }
      #source-cssowl-sprite-absolute-inside-styl.tab-pane
        = preserve do
          -code("sass") do
            :plain
              cssowl-sprite-absolute-inside($element, $valign=top, $halign=left, $xOffset=0, $yOffset=0)
                cssowl-absolute-inside($element[2], $element[3], $valign, $halign, $xOffset, $yOffset)
                @extend ${$element[4]}


