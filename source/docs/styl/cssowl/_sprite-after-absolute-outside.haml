%h3#cssowl-sprite-after-absolute-outside cssowl-sprite-after-absolute-outside

:markdown
  Add a sprite element with the `:after` pseudo selector and place it absolutely *outside* the bounding box.

.panel.panel-default
  .panel-heading
    = link_to 'Source', '#source-cssowl-sprite-after-absolute-outside', data: {toggle: 'collapse'}

  #source-cssowl-sprite-after-absolute-outside.panel-body.panel-collapse.collapse
    %ul.nav.nav-tabs
      %li.active
        = link_to 'SASS', '#source-cssowl-sprite-after-absolute-outside-sass'
      %li
        = link_to 'SCSS', '#source-cssowl-sprite-after-absolute-outside-scss'
      %li
        = link_to 'LESS', '#source-cssowl-sprite-after-absolute-outside-less'
      %li
        = link_to 'Stylus', '#source-cssowl-sprite-after-absolute-outside-styl'

    .tab-content
      #source-cssowl-sprite-after-absolute-outside-sass.tab-pane.active
        = preserve do
          -code("sass") do
            :plain
              =cssowl-sprite-after-absolute-outside($element, $valign:top, $halign:left, $xOffset:0, $yOffset:0, $float:left)
                +cssowl-after-absolute-outside("", nth($element, 3), nth($element, 4), $valign, $halign, $xOffset, $yOffset)
                &:after
                  @extend %\#{nth($element, 5)}
      #source-cssowl-sprite-after-absolute-outside-scss.tab-pane
        = preserve do
          -code("scss") do
            :plain
              @mixin cssowl-sprite-after-absolute-outside($element, $valign:top, $halign:left, $xOffset:0, $yOffset:0, $float:left) {
                @include cssowl-after-absolute-outside("", nth($element, 3), nth($element, 4), $valign, $halign, $xOffset, $yOffset);
                &:after {
                  @extend %\#{nth($element, 5)};
                }
              }
      #source-cssowl-sprite-after-absolute-outside-less.tab-pane
        = preserve do
          -code("scss") do
            :plain
              .cssowl-sprite-after-absolute-outside(@element, @valign:top, @halign:left, @xOffset:0, @yOffset:0, @float:left) {
                .cssowl-after-absolute-outside("", extract(@element, 3), extract(@element, 4), @valign, @halign, @xOffset, @yOffset);
                &:after {
                  .less-sprite-element(extract(@element, 5));
                }
              }
      #source-cssowl-sprite-after-absolute-outside-styl.tab-pane
        = preserve do
          -code("sass") do
            :plain
              cssowl-sprite-after-absolute-outside($element, $valign=top, $halign=left, $xOffset=0, $yOffset=0, $float=left)
                cssowl-after-absolute-outside("", $element[2], $element[3], $valign, $halign, $xOffset, $yOffset)
                &:after
                  @extend ${$element[4]}


