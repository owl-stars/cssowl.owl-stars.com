%h3#cssowl-sprite-after-float cssowl-sprite-after-float

:markdown
  Add a sprite element with the `:after` pseudo selector and place it with the `float` attribute.

.panel.panel-default
  .panel-heading
    = link_to 'Source', '#source-cssowl-sprite-after-float', data: {toggle: 'collapse'}

  #source-cssowl-sprite-after-float.panel-body.panel-collapse.collapse
    %ul.nav.nav-tabs
      %li.active
        = link_to 'SASS', '#source-cssowl-sprite-after-float-sass'
      %li
        = link_to 'SCSS', '#source-cssowl-sprite-after-float-scss'
      %li
        = link_to 'LESS', '#source-cssowl-sprite-after-float-less'
      %li
        = link_to 'Stylus', '#source-cssowl-sprite-after-float-styl'

    .tab-content
      #source-cssowl-sprite-after-float-sass.tab-pane.active
        = preserve do
          -code("sass") do
            :plain
              =cssowl-sprite-after-float($element, $margin:0 0 0 0, $float:right)
                +cssowl-after-float("", $margin, $float)
                &:after
                  @extend %\#{nth($element, 5)}
      #source-cssowl-sprite-after-float-scss.tab-pane
        = preserve do
          -code("scss") do
            :plain
              @mixin cssowl-sprite-after-float($element, $margin:0 0 0 0, $float:right) {
                @include cssowl-after-float("", $margin, $float);
                &:after {
                  @extend %\#{nth($element, 5)};
                }
              }
      #source-cssowl-sprite-after-float-less.tab-pane
        = preserve do
          -code("scss") do
            :plain
              .cssowl-sprite-after-float(@element, @margin:0 0 0 0, @float:right) {
                .cssowl-after-float("", @margin, @float);
                &:after {
                  .less-sprite-element(extract(@element, 5));
                }
              }
      #source-cssowl-sprite-after-float-styl.tab-pane
        = preserve do
          -code("sass") do
            :plain
              cssowl-sprite-after-float($element, $margin=0 0 0 0, $float=right)
                cssowl-after-float("", $margin, $float)
                &:after
                  @extend ${$element[4]}


