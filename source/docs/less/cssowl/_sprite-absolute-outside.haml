%h3#cssowl-sprite-absolute-outside cssowl-sprite-absolute-outside

:markdown
  Place a sprite element with `position: absolute;` *outside* the bounding box.

.panel.panel-default
  .panel-heading
    = link_to 'Source', '#source-cssowl-sprite-absolute-outside', data: {toggle: 'collapse'}

  #source-cssowl-sprite-absolute-outside.panel-body.panel-collapse.collapse
    %ul.nav.nav-tabs
      %li.active
        = link_to 'SASS', '#source-cssowl-sprite-absolute-outside-sass'
      %li
        = link_to 'SCSS', '#source-cssowl-sprite-absolute-outside-scss'
      %li
        = link_to 'LESS', '#source-cssowl-sprite-absolute-outside-less'
      %li
        = link_to 'Stylus', '#source-cssowl-sprite-absolute-outside-styl'

    .tab-content
      #source-cssowl-sprite-absolute-outside-sass.tab-pane.active
        = preserve do
          -code("sass") do
            :plain
              =cssowl-sprite-absolute-outside($element, $valign:top, $halign:left, $xOffset:0, $yOffset:0)
                +cssowl-absolute-outside(nth($element, 3), nth($element, 4), $valign, $halign, $xOffset, $yOffset)
                @extend %\#{nth($element, 5)}
      #source-cssowl-sprite-absolute-outside-scss.tab-pane
        = preserve do
          -code("scss") do
            :plain
              @mixin cssowl-sprite-absolute-outside($element, $valign:top, $halign:left, $xOffset:0, $yOffset:0) {
                @include cssowl-absolute-outside(nth($element, 3), nth($element, 4), $valign, $halign, $xOffset, $yOffset);
                @extend %\#{nth($element, 5)};
              }
      #source-cssowl-sprite-absolute-outside-less.tab-pane
        = preserve do
          -code("scss") do
            :plain
              .cssowl-sprite-absolute-outside(@element, @valign:top, @halign:left, @xOffset:0, @yOffset:0) {
                .cssowl-absolute-outside(extract(@element, 3), extract(@element, 4), @valign, @halign, @xOffset, @yOffset);
                .less-sprite-element(extract(@element, 5));
              }
      #source-cssowl-sprite-absolute-outside-styl.tab-pane
        = preserve do
          -code("sass") do
            :plain
              cssowl-sprite-absolute-outside($element, $valign=top, $halign=left, $xOffset=0, $yOffset=0)
                cssowl-absolute-outside($element[2], $element[3], $valign, $halign, $xOffset, $yOffset)
                @extend ${$element[4]}


