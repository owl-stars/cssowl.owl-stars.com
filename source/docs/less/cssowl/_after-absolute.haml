%h3#cssowl-after-absolute cssowl-after-absolute

:markdown
  Mixin to add content with the `:after` pseudo selector and position it absolutely.

.panel.panel-default
  .panel-heading
    = link_to 'Source', '#source-cssowl-after-absolute', data: {toggle: 'collapse'}

  #source-cssowl-after-absolute.panel-body.panel-collapse.collapse
    %ul.nav.nav-tabs
      %li.active
        = link_to 'SASS', '#source-cssowl-after-absolute-sass'
      %li
        = link_to 'SCSS', '#source-cssowl-after-absolute-scss'
      %li
        = link_to 'LESS', '#source-cssowl-after-absolute-less'
      %li
        = link_to 'Stylus', '#source-cssowl-after-absolute-styl'

    .tab-content
      #source-cssowl-after-absolute-sass.tab-pane.active
        = preserve do
          -code("sass") do
            :plain
              // mixin
              =cssowl-after-absolute($content, $coordinates:0 false false 0)
                position: relative
                &:after
                  content: $content
                  +cssowl-absolute($coordinates)
      #source-cssowl-after-absolute-scss.tab-pane
        = preserve do
          -code("scss") do
            :plain
              // mixin
              @mixin cssowl-after-absolute($content, $coordinates:0 false false 0) {
                position: relative;
                &:after {
                  content: $content;
                  @include cssowl-absolute($coordinates);
                }
              }
      #source-cssowl-after-absolute-less.tab-pane
        = preserve do
          -code("scss") do
            :plain
              // mixin
              .cssowl-after-absolute(@content, @coordinates:0 false false 0) {
                position: relative;
                &:after {
                  content: @content;
                  .cssowl-absolute(@coordinates);
                }
              }
      #source-cssowl-after-absolute-styl.tab-pane
        = preserve do
          -code("sass") do
            :plain
              // mixin
              cssowl-after-absolute($content, $coordinates=0 false false 0)
                position: relative
                &:after
                  content: $content
                  cssowl-absolute($coordinates)


