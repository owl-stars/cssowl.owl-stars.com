%h3#cssowl-sprite-after cssowl-sprite-after

:markdown
  Add a sprite element with the `:after` pseudo selector.

.panel.panel-default
  .panel-heading
    = link_to 'Source', '#source-cssowl-sprite-after', data: {toggle: 'collapse'}

  #source-cssowl-sprite-after.panel-body.panel-collapse.collapse
    %ul.nav.nav-tabs
      %li.active
        = link_to 'SASS', '#source-cssowl-sprite-after-sass'
      %li
        = link_to 'SCSS', '#source-cssowl-sprite-after-scss'
      %li
        = link_to 'LESS', '#source-cssowl-sprite-after-less'
      %li
        = link_to 'Stylus', '#source-cssowl-sprite-after-styl'

    .tab-content
      #source-cssowl-sprite-after-sass.tab-pane.active
        = preserve do
          -code("sass") do
            :plain
              =cssowl-sprite-after($element, $margin:0 0 0 0, $display:inline-block)
                &:after
                  content: ""
                  margin: $margin
                  display: $display
                  @extend %\#{nth($element, 5)}
      #source-cssowl-sprite-after-scss.tab-pane
        = preserve do
          -code("scss") do
            :plain
              @mixin cssowl-sprite-after($element, $margin:0 0 0 0, $display:inline-block) {
                &:after {
                  content: "";
                  margin: $margin;
                  display: $display;
                  @extend %\#{nth($element, 5)};
                }
              }
      #source-cssowl-sprite-after-less.tab-pane
        = preserve do
          -code("scss") do
            :plain
              .cssowl-sprite-after(@element, @margin:0 0 0 0, @display:inline-block) {
                &:after {
                  content: "";
                  margin: @margin;
                  display: @display;
                  .less-sprite-element(extract(@element, 5));
                }
              }
      #source-cssowl-sprite-after-styl.tab-pane
        = preserve do
          -code("sass") do
            :plain
              cssowl-sprite-after($element, $margin=0 0 0 0, $display=inline-block)
                &:after
                  content ""
                  margin $margin
                  display $display
                  @extend ${$element[4]}


