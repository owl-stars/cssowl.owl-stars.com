%h3#cssowl-sprite-after-absolute cssowl-sprite-after-absolute

:markdown
  Add a sprite element with the `:after` pseudo selector and place it absolutely.

.panel.panel-default
  .panel-heading
    = link_to 'Source', '#source-cssowl-sprite-after-absolute', data: {toggle: 'collapse'}

  #source-cssowl-sprite-after-absolute.panel-body.panel-collapse.collapse
    %ul.nav.nav-tabs
      %li.active
        = link_to 'SASS', '#source-cssowl-sprite-after-absolute-sass'
      %li
        = link_to 'SCSS', '#source-cssowl-sprite-after-absolute-scss'
      %li
        = link_to 'LESS', '#source-cssowl-sprite-after-absolute-less'
      %li
        = link_to 'Stylus', '#source-cssowl-sprite-after-absolute-styl'

    .tab-content
      #source-cssowl-sprite-after-absolute-sass.tab-pane.active
        = preserve do
          -code("sass") do
            :plain
              =cssowl-sprite-after-absolute($element, $coordinates:0 false false 0)
                +cssowl-after-absolute("", $coordinates)
                &:after
                  @extend %\#{nth($element, 5)}
      #source-cssowl-sprite-after-absolute-scss.tab-pane
        = preserve do
          -code("scss") do
            :plain
              @mixin cssowl-sprite-after-absolute($element, $coordinates:0 false false 0) {
                @include cssowl-after-absolute("", $coordinates);
                &:after {
                  @extend %\#{nth($element, 5)};
                }
              }
      #source-cssowl-sprite-after-absolute-less.tab-pane
        = preserve do
          -code("scss") do
            :plain
              .cssowl-sprite-after-absolute(@element, @coordinates:0 false false 0) {
                .cssowl-after-absolute("", @coordinates);
                &:after {
                  .less-sprite-element(extract(@element, 5));
                }
              }
      #source-cssowl-sprite-after-absolute-styl.tab-pane
        = preserve do
          -code("sass") do
            :plain
              cssowl-sprite-after-absolute($element, $coordinates=0 false false 0)
                cssowl-after-absolute("", $coordinates)
                &:after
                  @extend ${$element[4]}


