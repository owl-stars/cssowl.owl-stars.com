%h3#cssowl-absolute-inside cssowl-absolute-inside

:markdown
  Mixin to position an element absolutely *inside* the bounding box.

.panel.panel-default
  .panel-heading
    = link_to 'Source', '#source-cssowl-absolute-inside', data: {toggle: 'collapse'}

  #source-cssowl-absolute-inside.panel-body.panel-collapse.collapse
    %ul.nav.nav-tabs
      %li.active
        = link_to 'SASS', '#source-cssowl-absolute-inside-sass'
      %li
        = link_to 'SCSS', '#source-cssowl-absolute-inside-scss'
      %li
        = link_to 'LESS', '#source-cssowl-absolute-inside-less'
      %li
        = link_to 'Stylus', '#source-cssowl-absolute-inside-styl'

    .tab-content
      #source-cssowl-absolute-inside-sass.tab-pane.active
        = preserve do
          -code("sass") do
            :plain
              // mixin
              =cssowl-absolute-inside($width, $height, $valign:top, $halign:left, $xOffset:0, $yOffset:0)
                width: $width
                height: $height
                @extend %cssowl-absolute
                +cssowl-coords-inside($width, $height, $valign, $halign, $xOffset, $yOffset)
      #source-cssowl-absolute-inside-scss.tab-pane
        = preserve do
          -code("scss") do
            :plain
              // mixin
              @mixin cssowl-absolute-inside($width, $height, $valign:top, $halign:left, $xOffset:0, $yOffset:0) {
                width: $width;
                height: $height;
                @extend %cssowl-absolute;
                @include cssowl-coords-inside($width, $height, $valign, $halign, $xOffset, $yOffset);
              }
      #source-cssowl-absolute-inside-less.tab-pane
        = preserve do
          -code("scss") do
            :plain
              // mixin
              .cssowl-absolute-inside(@width, @height, @valign:top, @halign:left, @xOffset:0, @yOffset:0) {
                width: @width;
                height: @height;
                position: absolute;
                .cssowl-coords-inside(@width, @height, @valign, @halign, @xOffset, @yOffset);
              }
      #source-cssowl-absolute-inside-styl.tab-pane
        = preserve do
          -code("sass") do
            :plain
              // mixin
              cssowl-absolute-inside($width, $height, $valign=top, $halign=left, $xOffset=0, $yOffset=0)
                width $width
                height $height
                @extend $cssowl-absolute;
                cssowl-coords-inside($width, $height, $valign, $halign, $xOffset, $yOffset);


