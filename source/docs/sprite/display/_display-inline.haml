      = preserve do
        -code("scss") do
          :plain
            .example-display-inline {
              @include cssowl-sprite-display-inline(-10px, -10px, 91px, 95px, url("sprite.png"));
            }
    #example-display-inline-less.tab-pane
      = preserve do
        -code("less") do
          :plain
            .example-display-inline {
              .cssowl-sprite-display-inline(-10px, -10px, 91px, 95px, url("sprite.png"));
            }
    #example-display-inline-stylus.tab-pane
      = preserve do
        -code("stylus") do
          :plain
            .example-display-inline
              cssowl-sprite-display-inline(-10px, -10px, 91px, 95px, url("sprite.png"))
    #example-display-inline-html.tab-pane.active
