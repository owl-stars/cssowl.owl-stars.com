%h3#cssowl-sprite-display cssowl-sprite-display

:markdown
  Add a sprite element with its `width`, `height`, `background-image` and `background-position`.

.panel.panel-default
  .panel-heading
    = link_to 'Source', '#source-cssowl-sprite-display', data: {toggle: 'collapse'}

  #source-cssowl-sprite-display.panel-body.panel-collapse.collapse
    %ul.nav.nav-tabs
      %li.active
        = link_to 'SASS', '#source-cssowl-sprite-display-sass'
      %li
        = link_to 'SCSS', '#source-cssowl-sprite-display-scss'
      %li
        = link_to 'LESS', '#source-cssowl-sprite-display-less'
      %li
        = link_to 'Stylus', '#source-cssowl-sprite-display-styl'

    .tab-content
      #source-cssowl-sprite-display-sass.tab-pane.active
        = preserve do
          -code("sass") do
            :plain
              @mixin cssowl-sprite-display($element, $display:inline-block)
                display: $display
                @extend %\#{nth($element, 5)}
      #source-cssowl-sprite-display-scss.tab-pane
        = preserve do
          -code("scss") do
            :plain
              @mixin cssowl-sprite-display($element, $display:inline-block) {
                display: $display;
                @extend %\#{nth($element, 5)};
              }
      #source-cssowl-sprite-display-less.tab-pane
        = preserve do
          -code("scss") do
            :plain
              .cssowl-sprite-display(@element, @display:inline-block) {
                display: @display;
                .less-sprite-element(extract(@element, 5));
              }
      #source-cssowl-sprite-display-styl.tab-pane
        = preserve do
          -code("sass") do
            :plain
              cssowl-sprite-display($element, $display=inline-block)
                display $display
                @extend ${$element[4]}


.panel.panel-default
