%h3#cssowl-relative cssowl-relative

:markdown
  Extendable placeholder and mixin to position an element relatively.

.panel.panel-default
  .panel-heading
    = link_to 'Source', '#source-cssowl-relative', data: {toggle: 'collapse'}

  #source-cssowl-relative.panel-body.panel-collapse.collapse
    %ul.nav.nav-tabs
      %li.active
        = link_to 'SASS', '#source-cssowl-relative-sass'
      %li
        = link_to 'SCSS', '#source-cssowl-relative-scss'
      %li
        = link_to 'LESS', '#source-cssowl-relative-less'
      %li
        = link_to 'Stylus', '#source-cssowl-relative-styl'

    .tab-content
      #source-cssowl-relative-sass.tab-pane.active
        = preserve do
          -code("sass") do
            :plain
              // extendable placeholder
              %cssowl-relative
                position: relative
              // mixin
              =cssowl-relative($coordinates:0 false false 0)
                +cssowl-coords($coordinates)
                @extend %cssowl-relative
      #source-cssowl-relative-scss.tab-pane
        = preserve do
          -code("scss") do
            :plain
              // extendable placeholder
              %cssowl-relative {
                position: relative;
              }
              // mixin
              @mixin cssowl-relative($coordinates:0 false false 0) {
                @include cssowl-coords($coordinates);
                @extend %cssowl-relative;
              }
      #source-cssowl-relative-less.tab-pane
        = preserve do
          -code("scss") do
            :plain
              // disabled as less doesn't provide placeholders yet
              //.cssowl-relative {
              //  position: relative;
              //}
              // mixin
              .cssowl-relative(@coordinates:0 false false 0) {
                .cssowl-coords(@coordinates);
                position: relative;
              }
      #source-cssowl-relative-styl.tab-pane
        = preserve do
          -code("sass") do
            :plain
              // extendable placeholder
              $cssowl-relative
                position: relative;
              // mixin
              cssowl-relative($coordinates=0 false false 0)
                cssowl-coords($coordinates)
                @extend $cssowl-relative


